<?xml version="1.0" encoding="UTF-8"?>
<ejb-jar version="2.1" xmlns="http://java.sun.com/xml/ns/j2ee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/ejb-jar_2_1.xsd">
    <display-name>JBoss4EjbTest</display-name>
    <enterprise-beans>
        <session>
            <display-name>SessionTestSB</display-name>
            <ejb-name>SessionTestBean</ejb-name>
            <local-home>ejb.SessionTestLocalHome</local-home>
            <local>ejb.SessionTestLocal</local>
            <ejb-class>ejb.SessionTestBean</ejb-class>
            <session-type>Stateless</session-type>
            <transaction-type>Container</transaction-type>
        </session>
        <session>
            <display-name>SessionTest2SB</display-name>
            <ejb-name>SessionTest2Bean</ejb-name>
            <home>ejb.SessionTest2RemoteHome</home>
            <remote>ejb.SessionTest2Remote</remote>
            <local-home>ejb.SessionTest2LocalHome</local-home>
            <local>ejb.SessionTest2Local</local>
            <ejb-class>ejb.SessionTest2Bean</ejb-class>
            <session-type>Stateful</session-type>
            <transaction-type>Container</transaction-type>
        </session>
        </enterprise-beans>
    <assembly-descriptor>
        <container-transaction>
            <method>
                <ejb-name>SessionTestBean</ejb-name>
                <method-name>*</method-name>
            </method>
            <trans-attribute>Required</trans-attribute>
        </container-transaction>
        <container-transaction>
            <method>
                <ejb-name>SessionTest2Bean</ejb-name>
                <method-name>*</method-name>
            </method>
            <trans-attribute>Required</trans-attribute>
        </container-transaction>
        </assembly-descriptor>
    </ejb-jar>
