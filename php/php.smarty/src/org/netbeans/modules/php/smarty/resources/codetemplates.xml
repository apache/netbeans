<!DOCTYPE codetemplates PUBLIC  "-//NetBeans//DTD Editor Code Templates settings 1.0//EN"
                                "http://www.netbeans.org/dtds/EditorCodeTemplates-1_0.dtd">

<codetemplates>

    <!-- Built-in Functions -->
    <codetemplate abbreviation="var">
        <code><![CDATA[{${variable}=${value}}]]></code>
    </codetemplate>
    <codetemplate abbreviation="ap">
        <code><![CDATA[{append var="${var}" value="${value}"${cursor}}]]></code>
    </codetemplate>
    <codetemplate abbreviation="as">
        <code><![CDATA[{assign var="${var}" value="${value}"${cursor}}]]></code>
    </codetemplate>
    <codetemplate abbreviation="bl">
        <code>
<![CDATA[{block name="${name}"}
    ${selection}${cursor}
{/block}
]]>
        </code>
    </codetemplate>
    <codetemplate abbreviation="ca">
        <code><![CDATA[{call name="${name}"${cursor}}]]></code>
    </codetemplate>
    <codetemplate abbreviation="cap">
        <code>
<![CDATA[{capture name="${name}"}
    ${selection}${cursor}
{/capture}
]]>
        </code>
    </codetemplate>
    <codetemplate abbreviation="for">
        <code>
<![CDATA[{for ${$var}=${from} to ${to}}
    ${selection}${cursor}
{/for}
]]>
        </code>
    </codetemplate>
    <codetemplate abbreviation="fore">
        <code>
<![CDATA[{foreach ${array} as ${item}}
    ${selection}${cursor}
{/foreach}
]]>
        </code>
    </codetemplate>
    <codetemplate abbreviation="fu">
        <code>
<![CDATA[{function name="${name}"}
    ${selection}${cursor}
{/function}
]]>
        </code>
    </codetemplate>
    <codetemplate abbreviation="if" descriptionId="CT_if">
        <code>
<![CDATA[{if ${condition}}
    ${selection}${cursor}
{/if}
]]>
        </code>
    </codetemplate>
    <codetemplate abbreviation="ife" descriptionId="CT_ife">
        <code>
<![CDATA[{if ${condition}}
    ${selection}${cursor}
{else}
{/if}
]]>
        </code>
    </codetemplate>
    <codetemplate abbreviation="ic">
        <code><![CDATA[{include file="${file}${cursor}}]]></code>
    </codetemplate>
    <codetemplate abbreviation="in">
        <code><![CDATA[{insert name="${name}${cursor}}]]></code>
    </codetemplate>
    <codetemplate abbreviation="ip">
        <code><![CDATA[{include_php file="${file}${cursor}}]]></code>
    </codetemplate>
    <codetemplate abbreviation="ld">
        <code><![CDATA[{ldelim}]]></code>
    </codetemplate>
    <codetemplate abbreviation="rd">
        <code><![CDATA[{rdelim}]]></code>
    </codetemplate>
    <codetemplate abbreviation="li">
        <code>
<![CDATA[{literal}
    ${selection}${cursor}
{/literal}
]]>
        </code>
    </codetemplate>
    <codetemplate abbreviation="no">
        <code>
<![CDATA[{nocache}
    ${selection}${cursor}
{/nocache}
]]>
        </code>
    </codetemplate>
    <codetemplate abbreviation="php">
        <code>
<![CDATA[{php}
    ${selection}${cursor}
{/php}
]]>
        </code>
    </codetemplate>
    <codetemplate abbreviation="se">
        <code>
<![CDATA[{section name="${name}" loop=${array}}
    ${selection}${cursor}
{/section}
]]>
        </code>
    </codetemplate>
    <codetemplate abbreviation="sf">
        <code>
<![CDATA[{setfilter ${filter}}
    ${selection}${cursor}
{/setfilter}
]]>
        </code>
    </codetemplate>
    <codetemplate abbreviation="st">
        <code>
<![CDATA[{strip}
    ${selection}${cursor}
{/strip}
]]>
        </code>
    </codetemplate>
    <codetemplate abbreviation="wh">
        <code>
<![CDATA[{while ${condition}}
    ${selection}${cursor}
{/while}
]]>
        </code>
    </codetemplate>

    <!-- Custom Functions -->
    <codetemplate abbreviation="co">
        <code><![CDATA[{counter${cursor}}]]></code>
    </codetemplate>
    <codetemplate abbreviation="cy">
        <code><![CDATA[{cycle values="${values}"${cursor}}]]></code>
    </codetemplate>
    <codetemplate abbreviation="ev">
        <code><![CDATA[{eval var="${var}"${cursor}}]]></code>
    </codetemplate>
    <codetemplate abbreviation="fe">
        <code><![CDATA[{fetch file="${file}"${cursor}}]]></code>
    </codetemplate>
    <codetemplate abbreviation="htch">
        <code><![CDATA[{html_checkboxes values=${values} output=${output}${cursor}}]]></code>
    </codetemplate>
    <codetemplate abbreviation="hti">
        <code><![CDATA[{html_image file="${file}"${cursor}}]]></code>
    </codetemplate>
    <codetemplate abbreviation="hto">
        <code><![CDATA[{html_options values=${values} output=${output}${cursor}}]]></code>
    </codetemplate>
    <codetemplate abbreviation="htr">
        <code><![CDATA[{html_radios values=${values} output=${output}${cursor}}]]></code>
    </codetemplate>
    <codetemplate abbreviation="htd">
        <code><![CDATA[{html_select_date${cursor}}]]></code>
    </codetemplate>
    <codetemplate abbreviation="htst">
        <code><![CDATA[{html_select_time${cursor}}]]></code>
    </codetemplate>
    <codetemplate abbreviation="htt">
        <code><![CDATA[{html_table loop=${array}${cursor}}]]></code>
    </codetemplate>
    <codetemplate abbreviation="mail">
        <code><![CDATA[{mailto address=${address}${cursor}}]]></code>
    </codetemplate>
    <codetemplate abbreviation="math">
        <code><![CDATA[{math equation=${equation} ${var}=$value}${cursor}}]]></code>
    </codetemplate>
    <codetemplate abbreviation="tf">
        <code><![CDATA[{textformat${cursor}}]]></code>
    </codetemplate>

</codetemplates>
