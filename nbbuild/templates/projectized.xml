            <jvmarg value="--add-opens=java.base/java.net=ALL-UNNAMED" />
            <jvmarg value="--add-opens=java.desktop/sun.awt=ALL-UNNAMED" />
            <arg value="--classpath" />
            <arg value="${jackpot.class.path}" />
            <arg line="${jackpot.extra.args}" />
            <arg value="${src.dir}" />
            <classpath>
