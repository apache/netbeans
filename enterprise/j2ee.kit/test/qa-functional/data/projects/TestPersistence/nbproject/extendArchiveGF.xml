<project default="default" basedir="..">
        
    <target name="default">
        <echo message="Default target is not set."/>
    </target>
    
    <target name="-init-extend-archive" depends="init">
        <available file="${resource.dir}" property="has.resources"/>
    </target>
    
    <!-- Main target -->
    <target name="-extend-archive" depends="-init-extend-archive" if="has.resources">
        <!-- nothing like consistent naming standards -->
        <condition property="copy.destination.dir" value="${build.web.dir}">
            <!-- this is being used in a web app -->
            <isset property="build.web.dir"/>
        </condition>
        <condition property="copy.destination.dir" value="${build.classes.dir}">
            <!-- this is being used in an ejb jar or app cleint -->
            <isset property="build.classes.dir"/>
        </condition>
        <!-- being used  in an ear project -->
        <property name="copy.destination.dir" value="${build.dir}"/>
        <copy todir="${copy.destination.dir}/META-INF">
            <fileset  dir="${resource.dir}" includes="sun-resources.xml"/>
        </copy>
    </target>
    
</project>
