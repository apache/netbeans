<?xml version="1.0" encoding="UTF-8"?>
<ejb-jar version="2.1" xmlns="http://java.sun.com/xml/ns/j2ee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/ejb-jar_2_1.xsd">
  <display-name>TestingEntApp-EJBModule</display-name>
  <enterprise-beans>
    <session>
      <display-name>TestingSessionSB</display-name>
      <ejb-name>TestingSessionBean</ejb-name>
      <home>test.TestingSessionRemoteHome</home>
      <remote>test.TestingSessionRemote</remote>
      <local-home>test.TestingSessionLocalHome</local-home>
      <local>test.TestingSessionLocal</local>
      <ejb-class>test.TestingSessionBean</ejb-class>
      <session-type>Stateless</session-type>
      <transaction-type>Container</transaction-type>
            <ejb-local-ref>
                <ejb-ref-name>TestingEntityBean</ejb-ref-name>
                <ejb-ref-type>Entity</ejb-ref-type>
                <local-home>test.TestingEntityLocalHome</local-home>
                <local>test.TestingEntityLocal</local>
                <ejb-link>TestingEntityBean</ejb-link>
            </ejb-local-ref>
            <resource-ref>
                <description>jdbc:derby://localhost:1527/sample</description>
                <res-ref-name>myTestingDatabase</res-ref-name>
                <res-type>javax.sql.DataSource</res-type>
                <res-auth>Container</res-auth>
                <res-sharing-scope>Shareable</res-sharing-scope>
            </resource-ref>
            </session>
    <entity>
      <display-name>TestingEntityEB</display-name>
      <ejb-name>TestingEntityBean</ejb-name>
      <home>test.TestingEntityRemoteHome</home>
      <remote>test.TestingEntityRemote</remote>
      <local-home>test.TestingEntityLocalHome</local-home>
      <local>test.TestingEntityLocal</local>
      <ejb-class>test.TestingEntityBean</ejb-class>
      <persistence-type>Container</persistence-type>
      <prim-key-class>java.lang.String</prim-key-class>
      <reentrant>false</reentrant>
      <abstract-schema-name>TestingEntity</abstract-schema-name>
      <cmp-field>
        <field-name>key</field-name>
      </cmp-field>
            <primkey-field>key</primkey-field>
            <query>
                <query-method>
                    <method-name>findByTest1</method-name>
                    <method-params/>
                </query-method>
                <ejb-ql>SELECT OBJECT(o) 
FROM TestingEntity o</ejb-ql>
            </query>
            <query>
                <query-method>
                    <method-name>findByTest3</method-name>
                    <method-params>
                        <method-param>java.lang.String</method-param>
                    </method-params>
                </query-method>
                <ejb-ql>SELECT OBJECT(o)
FROM TestingEntity o
WHERE o.key = ?1</ejb-ql>
            </query>
            <query>
                <query-method>
                    <method-name>ejbSelectByTest1</method-name>
                    <method-params/>
                </query-method>
                <ejb-ql>SELECT COUNT(o) 
FROM TestingEntity o</ejb-ql>
            </query>
            <query>
                <query-method>
                    <method-name>ejbSelectByTest2</method-name>
                    <method-params>
                        <method-param>java.lang.String</method-param>
                    </method-params>
                </query-method>
                <ejb-ql>SELECT COUNT(o) 
FROM TestingEntity o</ejb-ql>
            </query>
            </entity>
        <message-driven>
            <display-name>TestingMessageBeanMDB</display-name>
            <ejb-name>TestingMessageBean</ejb-name>
            <ejb-class>test.TestingMessageBean</ejb-class>
            <transaction-type>Container</transaction-type>
            <message-destination-type>javax.jms.Queue</message-destination-type>
            <message-destination-link>jms/TestingMessageBean</message-destination-link>
            <activation-config>
                <activation-config-property>
                    <activation-config-property-name>acknowledgeMode</activation-config-property-name>
                    <activation-config-property-value>Auto-acknowledge</activation-config-property-value>
                </activation-config-property>
                <activation-config-property>
                    <activation-config-property-name>destinationType</activation-config-property-name>
                    <activation-config-property-value>javax.jms.Queue</activation-config-property-value>
                </activation-config-property>
            </activation-config>
        </message-driven>
        </enterprise-beans>
  <assembly-descriptor>
    <container-transaction>
      <method>
        <ejb-name>TestingSessionBean</ejb-name>
        <method-name>*</method-name>
      </method>
      <trans-attribute>Required</trans-attribute>
    </container-transaction>
    <container-transaction>
      <method>
        <ejb-name>TestingEntityBean</ejb-name>
        <method-name>*</method-name>
      </method>
      <trans-attribute>Required</trans-attribute>
    </container-transaction>
    <container-transaction>
      <method>
        <ejb-name>TestingMessageBean</ejb-name>
        <method-name>*</method-name>
      </method>
      <trans-attribute>Required</trans-attribute>
    </container-transaction>
    <message-destination>
        <display-name>Destination for TestingMessageBeanMDB</display-name>
        <message-destination-name>jms/TestingMessageBean</message-destination-name>
    </message-destination>
  </assembly-descriptor>
</ejb-jar>
