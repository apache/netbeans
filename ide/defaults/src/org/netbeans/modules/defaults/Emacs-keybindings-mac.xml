<!DOCTYPE bindings PUBLIC "-//NetBeans//DTD Editor KeyBindings settings 1.1//EN" "http://www.netbeans.org/dtds/EditorKeyBindings-1_1.dtd">

<!--
    IMPORTANT:  This file modifies keybindings from Emacs-keybindings.xml to make them work on Mac OS.
-->

<bindings>
    
    <!-- Things we add that replace standard keybindings -->
    <bind key="CO-G" remove="true"/>
    <bind key="CM-G" actionName="goto-declaration"/>
    
    <bind key="O-D" remove="true"/>
    <bind key="M-D" actionName="remove-word-next"/>
    
    <bind key="O-W" remove="true"/>
    <bind key="M-W" actionName="copy-to-clipboard"/>

    <bind key="O-G$G" remove="true"/>
    <bind key="O-G$O-G" remove="true"/>
    <bind key="M-G$G" actionName="goto"/>
    <bind key="M-G$M-G" actionName="goto" />
    
    <bind key="O-V" remove="true"/>
    <bind key="M-V" actionName="page-up"/>
    
    <bind key="O-P" remove="true"/>
    <bind actionName="tooltip-show" key="M-P"/>
    
    <bind key="O-B" remove="true"/>
    <bind actionName="caret-previous-word" key="M-B"/>
    
    <bind key="O-F" remove="true"/>
    <bind actionName="caret-next-word" key="M-F"/>

    <bind key="O-S" remove="true"/>
    <bind actionName="find-next" key="M-S"/>

    <!-- Things we add only on the mac -->
    <bind key="C-P" actionName="caret-up"/>
    <bind key="C-W" actionName="cut-to-clipboard"/>
    <bind key="C-D" actionName="delete-next"/>
    <bind key="C-V" actionName="page-down"/>
    <bind key="M-UP" actionName="page-up"/> <!-- macbook support -->
    <bind key="M-DOWN" actionName="page-down"/> <!-- macbook support -->
    
</bindings>
