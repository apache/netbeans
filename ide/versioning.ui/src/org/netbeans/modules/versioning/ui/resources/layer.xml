<?xml-stylesheet type="text/xml" href="http://openide.netbeans.org/fs/filesystem.xsl"?>
<!DOCTYPE filesystem PUBLIC "-//NetBeans//DTD Filesystem 1.2//EN" "http://www.netbeans.org/dtds/filesystem-1_2.dtd">
<filesystem>

    <folder name="Editors">
        <folder name="SideBar">
            <file name="org-netbeans-modules-versioning-ui-diff-DiffSidebarFactory.instance">
                <attr name="position" intvalue="4000"/>
            </file>
            <!-- place in between line numbers sidebar and folding sidebar #57544 -->
            </folder>

        <folder name="UpToDateStatusProvider">
            <file name="org-netbeans-modules-versioning-ui-diff-DiffMarkProviderCreator.instance">
                <attr name="instanceClass" stringvalue="org.netbeans.modules.versioning.ui.diff.DiffMarkProviderCreator"/>
            </file>
        </folder>
    </folder>

    <!-- register into action pool to allow user to define shortcut, put it on toolbar etc. -->  
    <folder name="Actions">
        <folder name="Tools">
            <file name="org-netbeans-modules-versioning-ui-diff-ShowDiffSidebarAction.instance"/>
        </folder>
    </folder>
    
    <folder name="Menu">
        <folder name="View">
            <file name="org-netbeans-modules-versioning-ui-diff-ShowDiffSidebarAction.shadow">
                <attr name="originalFile" stringvalue="Actions/Tools/org-netbeans-modules-versioning-ui-diff-ShowDiffSidebarAction.instance"/>
                <attr name="position" intvalue="900"/>
            </file>
        </folder>
    </folder>   
    
    <!-- History -->
    <folder name="VersioningOptionsDialog">
        <file name="General.instance">
            <attr name="instanceClass" stringvalue="org.netbeans.modules.versioning.ui.options.GeneralAdvancedOption"/>
        </file>
        <file name="History.instance">
            <attr name="instanceClass" stringvalue="org.netbeans.modules.versioning.ui.options.HistoryOptions"/>
        </file>
    </folder>
    
    <folder name="OptionsExport">
        <folder name="Team">
            <file name="VersioningHistory">
                <attr name="include" stringvalue="var/filehistory/.*|config/Preferences/org/netbeans/modules/versioning/ui/history[.]properties"/>
                <attr name="displayName" bundlevalue="org.netbeans.modules.versioning.ui.resources.Bundle#History.Options.Export.displayName"/>
            </file>
        </folder>
    </folder>        
</filesystem>
